<%= form_tag '/create_clack' do %>

		<%= text_area_tag :content %>

<br>
		<%= submit_tag "Create Clack" %>

<% end %>




<%= form_tag '/', method: :get do %>

    <%= text_field_tag 'search' %>
    <br>
    <%= submit_tag 'search' %>
<% end %>


<% @clacks.each do |clack| %>

	<%= render 'clack', :clack => clack %>
	<% @replies.each do |reply| %>

	<%= render 'reply', :reply => reply %>
	
<% end %>


	<%= form_tag '/delete_clack' do %>

		<%= hidden_field_tag "clack_id" , clack.id %>
<br>
		<%= submit_tag "Delete Clack" %>

<% end %>


	<%= form_tag '/create_reply' do %>
		<%= text_area_tag :content %>
		 <%= hidden_field_tag "clack_id", clack.id %>
		<br>
		<%= submit_tag "Reply" %>
	<% end %> 




<% end %>

