<div>
<br>
<%= form_tag '/create_clack' do %>

		<%= text_area_tag :content %>

<br>
		<%= submit_tag "Create Clack" %>

<% end %>




<%= form_tag '/', method: :get do %>

    <%= text_field_tag 'search' %>
    <br>
    <%= submit_tag 'search' %>
<% end %>

<br>

<% @clacks.each do |clack| %>
	<%= render 'clack', :clack => clack %>
		<% clack.replies.each do |reply| %>			
			<%= render 'reply', :reply => reply %>
		<% end %>

<% end %>

</div>






