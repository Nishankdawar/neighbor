<%= form_tag '/create_clack' do %>

		<%= text_area_tag :content %>

<br>
		<%= submit_tag "Create Clack" %>

<% end %>




<%= form_tag '/', method: :get do %>

    <%= text_field_tag 'search' %>
    <br>
    <%= submit_tag 'search' %>
<% end %>

<br>

<% @clacks.each do |clack| %>
	<%= render 'clack', :clack => clack %>
		<%= form_tag '/', method: :get do %>
			<% puts '','','in view',clack.id,'in view','','' %>
			<%= hidden_field_tag 'clack_id', clack.id %>
			<%= submit_tag "Reply" %>
		<% @replies.each do |reply| %>			
			<%= render 'reply', :reply => reply %>
		<% end %>
	<% end %>
<% end %>






